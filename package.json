{
  "name": "@blackbox-vision/mui-audio-player",
  "version": "1.0.1",
  "private": false,
  "description": "Material-UI based Audio Player",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "clean": "rimraf pkg && rimraf storybook-static",
    "publish": "pack publish",
    "build": "npm run clean && pack build",
    "test": "jest --passWithNoTests -- -u",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "**/*.md",
            "**/*.tests.*",
            "**/*.stories.*",
            "**/__snapshots/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node",
        {
          "exclude": [
            "**/*.md",
            "**/*.tests.*",
            "**/*.stories.*",
            "**/__snapshots/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-web",
        {
          "exclude": [
            "**/*.md",
            "**/*.tests.*",
            "**/*.stories.*",
            "**/__snapshots/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-types",
        {
          "exclude": [
            "**/*.md",
            "**/*.tests.*",
            "**/*.stories.*",
            "**/__snapshots/*"
          ]
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlackBoxVision/mui-audio-player.git"
  },
  "author": "Jonatan E. Salas <jonatan.salas@blackbox-vision.tech>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BlackBoxVision/mui-audio-player/issues"
  },
  "homepage": "https://github.com/BlackBoxVision/mui-audio-player#readme",
  "peerDependencies": {
    "react": "^16.8.4",
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "@material-ui/lab": "^3.0.0-alpha.30"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.0.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "@material-ui/lab": "^3.0.0-alpha.30",
    "@pika/plugin-build-node": "^0.3.14",
    "@pika/plugin-build-types": "^0.3.14",
    "@pika/plugin-build-web": "^0.3.14",
    "@pika/plugin-standard-pkg": "^0.3.14",
    "@storybook/addon-actions": "^5.0.2",
    "@storybook/addon-info": "^5.0.2",
    "@storybook/addon-links": "^5.0.2",
    "@storybook/addons": "^5.0.2",
    "@storybook/react": "^5.0.2",
    "@storybook/storybook-deployer": "^2.8.1",
    "@storybook/theming": "^5.0.2",
    "@types/react": "^16.8.8",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "chai": "^4.1.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.2",
    "eslint-config-react-app": "^3.0.8",
    "eslint-import-resolver-lerna": "^1.1.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.5.1",
    "husky": "^1.3.1",
    "isparta": "^4.1.0",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "mocha": "^5.2.0",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "rimraf": "^2.6.3"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix --ext .ts,.tsx,.js",
      "git add"
    ]
  }
}
